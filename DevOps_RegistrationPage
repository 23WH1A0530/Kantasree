  <script>
    const railForm = document.getElementById('railRegistration');
    const pwd = railForm['user-password'];
    const confirmPwd = railForm['user-password-confirm'];
    const pwdError = document.getElementById('password-error');

    railForm.addEventListener('submit', e => {
      pwdError.style.display = 'none';
      if (pwd.value !== confirmPwd.value) {
        e.preventDefault();
        pwdError.style.display = 'block';
        confirmPwd.focus();
      }
    });
  </script>
